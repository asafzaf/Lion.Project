<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="390dp"
    android:layout_height="140dp"
    android:layout_margin="15dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="134dp"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <!--text view for our course name-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTVcontact_contact_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="שם:"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <!--text view for our course tracks-->

            <TextView
                android:id="@+id/idTVcontact_contact_profession"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="3dp"
                android:text="מקצוע:"
                android:textColor="@color/black" />


            <!--text view for our course duration-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTVcontact_contact_number"
                android:layout_width="336dp"
                android:layout_height="35dp"
                android:layout_weight="10"
                android:padding="2dp"
                android:text="מספר טלפון:"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTVcontact_contact_email"
                android:layout_width="130dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="מייל:"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>