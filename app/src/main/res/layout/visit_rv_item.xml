<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="390dp"
    android:layout_height="170dp"
    android:layout_margin="15dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="160dp"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <!--text view for our course name-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTVvisitDATE"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text="תאריך:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/idTVprojectName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="פרוייקט:"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <!--text view for our course tracks-->

            <TextView
                android:id="@+id/idTVvisitDuration"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="משך זמן:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/idTVendTime"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="סיום:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/idTVstartTime"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="התחלה:"
                android:textColor="@color/black" />


            <!--text view for our course duration-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox_done"
                android:layout_width="81dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="   בוצע?" />

            <TextView
                android:id="@+id/idTVDescription"
                android:layout_width="336dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:padding="2dp"
                android:text="תיאור ליקוי:"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idTVmissionContract2"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="איש קשר 2:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/idTVmissionContract1"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="איש קשר 1:"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>